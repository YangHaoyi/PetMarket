<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
   <include
        android:id="@+id/top"
        layout="@layout/common_top"
         />
  <FrameLayout
    android:id="@+id/ll_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
      >
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="60dp"
            android:indeterminateDrawable="@drawable/loading_inner"
            android:indeterminateDuration="700"
           />
      <!-- style="?android:attr/progressBarStyleInverse"
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/main_font_grey"
            android:textSize="@dimen/font_2"
            android:layout_gravity="center_horizontal|bottom"/>-->
    </FrameLayout>
      <FrameLayout
          android:id="@+id/frame_empty_tip"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="gone">
          <LinearLayout
              android:id="@+id/id_user_list_empty"
              android:layout_width="164dp"
              android:layout_height="229dp"
              android:orientation="vertical"
              android:layout_gravity="center">
              <ImageView
                  android:id="@+id/iv_empty_tip"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />
              <ImageView
                  android:id="@+id/iv_empty_text"
                  android:layout_width="match_parent"
                  android:layout_height="15dp"/>
          </LinearLayout>

          
      </FrameLayout>
  </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_sorry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/bg_color"
        android:visibility="gone">
      <!--  <ImageView
            android:layout_width="150dp"
            android:layout_height="158dp"
            android:layout_gravity="center"
            android:src="@drawable/sorry"/>-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            android:src="@drawable/network_error"/>
        <ImageView
            android:id="@+id/iv_sorry"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="452dp"
            android:src="@drawable/network_refresh_selector"/>
       <!-- <TextView
            android:id="@+id/txt_sorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联网失败，单击重试"
            android:textSize="@dimen/font_2"
            android:layout_marginTop="88dp"
            android:layout_gravity="center"
            android:textColor="@color/main_font_grey"/>-->
    </FrameLayout>
</RelativeLayout>